{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XRL VUK Schema v1",
  "description": "Schema for VUK (Validated Unit of Knowledge) objects derived from sessions",
  "type": "object",
  "required": [
    "schema_version",
    "vuk_id",
    "created_at",
    "updated_at",
    "created_from_session_id",
    "status",
    "technology",
    "taxonomy",
    "trl",
    "mapping_profile_ref",
    "scores",
    "confidence",
    "audit",
    "logs"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1",
      "description": "Schema version identifier"
    },
    "vuk_id": {
      "type": "string",
      "description": "Unique identifier for this VUK",
      "minLength": 0
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of VUK creation",
      "minLength": 0
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "minLength": 0
    },
    "created_from_session_id": {
      "type": "string",
      "description": "Reference to the session ID that created this VUK",
      "minLength": 0
    },
    "status": {
      "type": "string",
      "description": "Current status of the VUK",
      "default": "draft"
    },
    "technology": {
      "type": "object",
      "description": "Technology information",
      "required": [
        "name",
        "one_liner",
        "description",
        "keywords",
        "exclusions"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the technology",
          "minLength": 0
        },
        "one_liner": {
          "type": "string",
          "description": "One-line summary of the technology",
          "minLength": 0
        },
        "description": {
          "type": "string",
          "description": "Full description of the technology",
          "minLength": 0
        },
        "keywords": {
          "type": "array",
          "description": "Keywords associated with the technology",
          "items": {
            "type": "string"
          }
        },
        "exclusions": {
          "type": "array",
          "description": "What should be excluded from this technology definition",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "taxonomy": {
      "type": "object",
      "description": "Taxonomy classification",
      "required": [
        "l1",
        "l2",
        "l3",
        "node_id"
      ],
      "properties": {
        "l1": {
          "type": "string",
          "description": "Level 1 classification",
          "minLength": 0
        },
        "l2": {
          "type": "string",
          "description": "Level 2 classification",
          "minLength": 0
        },
        "l3": {
          "type": "string",
          "description": "Level 3 classification",
          "minLength": 0
        },
        "node_id": {
          "type": "string",
          "description": "Taxonomy node identifier",
          "minLength": 0
        }
      },
      "additionalProperties": false
    },
    "trl": {
      "type": "object",
      "description": "Technology Readiness Level",
      "required": [
        "value",
        "rationale",
        "evidence_refs"
      ],
      "properties": {
        "value": {
          "type": ["number", "null"],
          "description": "TRL value (typically 1-9)",
          "minimum": 1,
          "maximum": 9
        },
        "rationale": {
          "type": "string",
          "description": "Rationale for the TRL value",
          "minLength": 0
        },
        "evidence_refs": {
          "type": "array",
          "description": "References to evidence supporting the TRL assessment",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "mapping_profile_ref": {
      "type": ["string", "null"],
      "description": "Reference to the mapping profile used"
    },
    "scores": {
      "type": "object",
      "description": "Calculated scores for various dimensions",
      "additionalProperties": true
    },
    "confidence": {
      "type": "object",
      "description": "Confidence assessment",
      "required": [
        "value",
        "rationale"
      ],
      "properties": {
        "value": {
          "type": ["number", "null"],
          "description": "Confidence value (typically 0-1 or 0-100)",
          "minimum": 0,
          "maximum": 100
        },
        "rationale": {
          "type": "string",
          "description": "Rationale for the confidence value",
          "minLength": 0
        }
      },
      "additionalProperties": false
    },
    "audit": {
      "type": "object",
      "description": "Audit and approval information",
      "required": [
        "approved",
        "approved_by",
        "approved_at"
      ],
      "properties": {
        "approved": {
          "type": "boolean",
          "description": "Whether this VUK has been approved",
          "default": false
        },
        "approved_by": {
          "type": ["string", "null"],
          "description": "Identifier of the person who approved this VUK"
        },
        "approved_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of approval"
        }
      },
      "additionalProperties": false
    },
    "logs": {
      "type": "array",
      "description": "Audit trail of all actions performed on this VUK",
      "items": {
        "type": "object",
        "description": "Log entry",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}

